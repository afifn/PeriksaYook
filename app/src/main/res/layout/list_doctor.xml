<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    card_view:cardElevation="8dp"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_dokter_poster"
                tools:src="@color/colorAccent"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginBottom="4dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/tv_dokter_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:layout_toEndOf="@id/img_dokter_poster"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                tools:text="Dr. Afif Nor Yusuf" />

            <TextView
                android:id="@+id/tv_dokter_spesialis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_dokter_title"
                android:layout_marginLeft="16dp"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColor="#8B8B8B"
                android:layout_marginRight="16dp"
                android:layout_toEndOf="@id/img_dokter_poster"
                android:fontFamily="@font/montserrat"
                tools:text="General Practic" />

            <TextView
                android:id="@+id/tv_dokter_dinas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_dokter_spesialis"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textSize="14sp"
                android:layout_toEndOf="@id/img_dokter_poster"
                android:textColor="#8B8B8B"
                android:maxLines="1"
                android:fontFamily="@font/montserrat"
                tools:text="Rs.Usu" />

            <TextView
                android:id="@+id/tv_dokter_online_offline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_below="@id/tv_dokter_dinas"
                android:layout_toEndOf="@id/img_dokter_poster"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                tools:text="Tidak Ada"/>

        </RelativeLayout>
