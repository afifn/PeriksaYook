<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".ui.patient.appointment.PatienMakeAppActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/signup_image_layout"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginBottom="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_req_pasien"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:background="@drawable/ic_circler" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="9dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                app:srcCompat="@drawable/ic_plus"
                tools:ignore="RtlHardcoded" />
        </RelativeLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/textInputLayout"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/edit_req_nama_pasien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"
                android:fontFamily="@font/poppins"
                android:hint="Nama Lengkap"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white"
                tools:ignore="Autofill" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/textInputLayout"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <AutoCompleteTextView
                android:id="@+id/edit_req_jekel_pasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="16dp"
                android:fontFamily="@font/poppins"
                android:hint="Jenis Kelamin"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/white"
                android:ems="10" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/textInputLayout"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/edit_req_tglahir_pasien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"
                android:fontFamily="@font/poppins"
                android:hint="Tanggal Lahir"
                android:inputType="date"
                android:maxLines="1"
                android:textColor="@color/white"
                android:focusableInTouchMode="false"
                tools:ignore="Autofill" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/textInputLayout"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/edit_req_note_pasien"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:drawablePadding="16dp"
                android:fontFamily="@font/poppins"
                android:hint="Keluhan Anak"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLines="1"
                android:textColor="@color/white"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                tools:ignore="Autofill" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_send_appointment"
            android:layout_width="200dp"
            android:layout_marginTop="16dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_appointment"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins"
            android:text="Kirim"/>

