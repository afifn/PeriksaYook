<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.patient.PatienVerifyAppActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/smile" />

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/thanks"
            android:fontFamily="@font/poppins_medium"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/txt_sukses_appointment"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            tools:text="Anda memesan janji dengan dr. afif pada 12 Agustus 2020 pukul 9:90"/>

        <TextView
            android:id="@+id/txt_sukses_nama"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"
            tools:text="Sampai ketemu ananda "/>

        <Button
            android:id="@+id/btn_home"
            android:layout_marginTop="38dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Beranda"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:background="@drawable/button_appointment"/>
    </LinearLayout>

</ScrollView>